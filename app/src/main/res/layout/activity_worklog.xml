<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leafchild.scopequotas.worklog.WorklogActivity">

    <TextView
        android:id="@+id/add_worklog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_worklog"
        android:gravity="center"
        android:padding="@dimen/activity_vertical_margin"
        android:textAppearance="@android:style/TextAppearance.Material.Headline" />

    <Spinner
        android:id="@+id/quotas_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/add_worklog"
        android:layout_marginTop="30dp"
        android:spinnerMode="dropdown"
        style="@style/Widget.AppCompat.Spinner.Underlined" />

    <EditText
        android:id="@+id/quota_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/amount"
        android:inputType="number"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:layout_marginTop="71dp"
        android:layout_below="@+id/quotas_list"
        android:layout_toStartOf="@+id/button_cancel" />

    <Spinner
        android:id="@+id/worklog_amount_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_alignBottom="@+id/quota_amount"
        android:layout_alignEnd="@+id/button_cancel"
        android:layout_marginEnd="@dimen/text_margin"
        android:layout_marginBottom="@dimen/text_margin" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:onClick="addWorklog"
        android:layout_alignBaseline="@+id/button_cancel"
        android:layout_alignBottom="@+id/button_cancel" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:onClick="cancel"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</android.widget.RelativeLayout>
